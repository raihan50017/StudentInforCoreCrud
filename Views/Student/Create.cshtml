@model StudentDto
@{
}

<div class="row">

    <div class="col-md-6 mx-auto rounded border p-3">
        <h4 class="mb-2 text-center">Add new student</h4>
        <form method="post">
            <div class="form-group mb-2">
                <label>Name</label>
                <input class="form-control" type="text" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label>Email</label>
                <input class="form-control" type="email" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label>Phone</label>
                <input class="form-control" type="text" asp-for="Phone" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <button type="submit" name="submit" class="btn btn-success">Submit</button>
            <button class="btn btn-outline-primary ms-1" asp-controller="Student" asp-action="Index">Cancel</button>
        </form>
    </div>

</div>